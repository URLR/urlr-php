{
    "name": "urlr/urlr-php",
    "description": "PHP library for the URLR API.",
    "keywords": [
        "urlr",
        "url shortener",
        "link reducer",
        "api"
    ],
    "homepage": "https://urlr.me",
    "license": "MIT",
    "authors": [
        {
            "name": "URLR",
            "homepage": "https://github.com/URLR/urlr-php/contributors"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/http-client-implementation": "*",
        "psr/http-factory": "*",
        "psr/http-client": "*",
        "php-http/discovery": "*",
        "php-http/message": "*"

    },
    "autoload": {
        "psr-4": {
            "URLR\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1"
    }
}
